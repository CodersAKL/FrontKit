//- Navbar mixins
mixin nav(name, id, style)
  - var style = (typeof style === 'undefined') ? "default" : style
  // NavBar
  nav( role="navigation", class=["navbar", "navbar-" + style, 'navbar-fixed-top'] )
    .container
      .navbar-header

        button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#" + id, aria-expanded="false", aria-controls="navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#")= name

      .collapse.navbar-collapse( id=id )
        ul.nav.navbar-nav
          block

mixin nav_item(href, active)
  li(class=active): a( href=href )
    block

mixin nav_item_dropdown(href, active)
  li(class=["dropdown", active])
    a.dropdown-toggle(
    href=href,
    data-toggle="dropdown",
    role="button",
    aria-expanded="false"
    aria-haspopup="true"
    )= attributes.label
      span.caret
    ul.dropdown-menu
      block

mixin nav_divider
  li.divider( role="seperator" )

mixin nav_header
  li.dropdown-header
    block

//- End navbar mixins
